@model IEnumerable<Person>
@{
    ViewData["Title"] = "Index";
}
<p>
    <a asp-action="Create" class="btn btn-success">ثبت جدید</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersianFullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnglishFullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersianBio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnglishBio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersianAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnglishAddress)
            </th>
          

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PersonID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersianFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnglishFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersianBio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnglishBio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersianAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnglishAddress)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-Id="@item.PersonID" class="btn btn-info">ویرایش</a>
                |
                <a asp-action="Delete" asp-route-Id="@item.PersonID" class="btn btn-danger" onclick="return confirm('از حذف این کالا مطمئن هستید؟')">حذف</a>
            </td>
        </tr>
        }
    </tbody>
</table>


